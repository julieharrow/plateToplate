<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true,
    placeholder: "First and Last Name" %>
  </div><br />
  
  <div class="field"
    <%= f.text_field :location, placeholder: "Location" %>
  </div><br />
  
  <div class="field">
    <%= f.text_area :my_story, placeholder: "Your Story" %>
  </div><br />
  
  <!--<div class="field">
    <%#=f.text_field :i_can_teach_you, placeholder: "Cuisine You Can Teach" %>
  </div><br />
  
  <div class="field">
    <%#=f.text_field :i_want_to_learn, placeholder: "Cuisine I Want To Learn" %>
  </div><br />!-->
  
  <div class="field">
    <%#=f.text_field :happy_to_host, placeholder: "Happy to Host" %>
    <%= f.label "Happy to Host?" %> <br />
    <%= f.check_box :happy_to_host%>
  </div></br>
  
  <div class="field">
    <%#=f.text_field :happy_to_host, placeholder: "Happy to Travel" %>
    <%= f.label "Happy to Travel?" %> <br />
    <%= f.check_box :happy_to_travel %>
  </div></br>
  
  <div class="field form-group">
    <%= f.label "Photo" %> <br />
    <%= f.file_field :avatar %>
  </div></br>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
