<p id="notice"><%= notice %></p>

<ul class="nav nav-pills" role="tablist">
  <li class="cuisine-types"><%= link_to "All Recipes",recipes_path %></li>
  <% @recipe_cuisines.each do |c| %>
  <li class="cuisine-types"> <%= link_to c.cuisine.name, recipes_path(cuisine_id: c.cuisine_id) %> </li>
  <% end %>
</ul>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2><%= link_to recipe.name, edit_recipe_path(recipe) %></h2>
          <p>Description: <%= recipe.description %></p>
          <p>Expected Time: <%= recipe.expected_time %> Minutes</p>
          <div>
          <% if recipe.pic_file_name != nil %>
            <%= image_tag recipe.pic.url(:medium) %>
          <% else %>
            <%= image_tag("default/plate.png", class:"img-rounded img-responsive avatar-thumbs")%>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
